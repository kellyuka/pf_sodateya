<h1 class= "light-green-text valign-wrapper">
  <i class="medium material-icons">people</i>
  <%=t('.title')%>
</h1> 
<div class="row">
  <div class ="col s8 offset-s2">
    <table class="centered teal-text text-darken-4">
      <thead>
        <tr>
          <th></th>
          <th><h5><%=User.human_attribute_name(:name)%></h5></th>
          <th><h5><%=User.human_attribute_name(:collections)%></h5></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
          <%if logged_in? && current_user.admin?%>
            <td><%= link_to t('defaults.destroy'), user, method: :delete, data: { confirm: t('defaults.message.destroy_confirm', item: User.model_name.human) } %></td>
          <%end%>
            <td><h5><%=user.name%></h5></td>
            <td><h5><%= user.collections.count %>å€‹</h5></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <br>
  <div class="center-align">
    <%= link_to t('defaults.login'), '/login', method: :get, class:"btn-large"  unless logged_in? %>
  </div>
  <%= link_to t('defaults.back'), root_path, method: :get, class:"btn blue-grey" %>
</div>