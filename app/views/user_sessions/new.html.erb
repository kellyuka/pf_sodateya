<h1>ログイン</h1>
<%= form_with url: login_path, method: :post ,local: true do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Login" %>
  </div>
<% end %>

<%= link_to '戻る', users_path %>
<%= link_to 'ユーザー新規作成', new_user_path %>