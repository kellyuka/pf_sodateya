<h1><%=t('defaults.login')%></h1>      
<%= form_with url: login_path, method: :post ,local: true do |f| %>
  <div class="field">
    <%= f.label :email ,User.human_attribute_name(:email)%><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, User.human_attribute_name(:password) %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit t('defaults.login') %>
  </div>
<% end %>
<%= link_to t('defaults.back'), users_path %>
<%= link_to t('.to_register_page'), new_user_path %>