  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h2>結果</h2>
            <div class = "resultindex">
                <p>ご飯をあげた回数</p>
                <p id="gohan-result">0</p>
            </div>
            <div class = "resultindex">
                <p>お風呂に入った回数</p>
                <p id="ohuro-result">0</p>
            </div>
            <div class = "resultindex">
                <p>散歩に行った回数</p>
                <p id="sanpo-result">0</p>
            </div>
            <div class = "resultindex">
                <p>おやすみした回数</p>
                <p id="sleep-result">0</p>
            </div>
                <div class = "kekka">
        <p id = "kekka-detail"></p>
            </div>
    </div>
    <div class="modal-footer">
      <a href="#" class="modal-close waves-effect waves-green btn-flat"  id = "js-restart">もういちどする</a>
    </div>
  </div>